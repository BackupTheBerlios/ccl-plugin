class ANTLR_FILE_LINE_FORMATTER is
   
   format_string( file_name : STR , line : INT ) : STR is
      if ( void(file_name) ) then
	 return "line(" + line + "), ";
      else
	 return file_name + ": line(" + line + "), ";
      end;
   end;
   
end;
